<?xml version="1.0" encoding="utf-8"?>

<TableLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_caption"
        android:minHeight="80dp"
        >
    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
        <ImageView
                android:id="@+id/action_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_loading_action"
                android:contentDescription="@string/icon"/>
        <jp.health_gate.DietDoctor.AutoSizeTextView
                android:id="@+id/action_title"
                style="@style/actionText"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/dummy_title"
                />
    </TableRow>

    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/action_level"
                style="@style/actionLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="@string/dummy_level"
                />
        <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                >

            <LinearLayout
                    android:id="@+id/action_star"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    >

                <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_star"
                        android:layout_margin="2dp"
                        android:contentDescription="@string/icon"/>

                <TextView
                        android:id="@+id/action_star_count"
                        style="@style/actionStar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:text="@string/dummy_stars"
                        />
            </LinearLayout>
            <ImageView
                    android:id="@+id/action_achievement"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="1dp"
                    android:src="@drawable/achievement_indicator_3_0"
                    android:contentDescription="@string/achievement"
                    />
        </RelativeLayout>
    </TableRow>
</TableLayout>