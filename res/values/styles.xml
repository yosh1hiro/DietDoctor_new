<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="tableCaption" parent="@android:style/TextAppearance.Medium">
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">center_vertical|right</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="tableDescription" parent="@android:style/TextAppearance">
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#C3E6C5</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">6pt</item>
    </style>

    <style name="headerText" parent="@android:style/TextAppearance">
        <item name="android:padding">2dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">6pt</item>
    </style>

    <style name="headerItem" parent="headerText">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="footerItem">
        <item name="android:layout_width">72dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="headerCaption" parent="headerText">
        <item name="android:padding">4dp</item>
        <item name="android:background">@color/bg_header</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="managementCaption">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bg_caption</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="actionText">
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/caption_text</item>
        <item name="android:background">@color/bg_root</item>
    </style>

    <style name="actionLevel">
        <item name="android:gravity">center</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/level_text</item>
    </style>

    <style name="actionStar">
        <item name="android:padding">2dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/level_text</item>
    </style>

    <style name="actionIcon">
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/caption_text</item>
        <item name="android:drawableTop">@drawable/ic_loading_action</item>
    </style>

    <style name="actionIconLarge">
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/caption_text</item>
        <item name="android:drawableTop">@drawable/ic_loading_action</item>
    </style>

    <style name="actionCaption">
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="rangingCaption" parent="actionCaption">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">@color/ranking_caption</item>
    </style>

    <style name="chartAxis">
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">4pt</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="chartValue">
        <item name="android:layout_margin">2dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/highlighted_text</item>
    </style>

    <style name="actionDescription">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="achievementValue">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/highlighted_text</item>
    </style>

    <style name="standardButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/standard_button</item>
    </style>

    <style name="selectButton">
        <item name="android:layout_margin">8dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/select_button</item>
    </style>

    <style name="heightButton" parent="standardButton">
        <item name="android:background">@drawable/height_button</item>
    </style>

    <style name="highlightButton" parent="standardButton">
        <item name="android:background">@drawable/highlight_button</item>
    </style>

    <style name="topicText">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">6pt</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="gender">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">#fff</item>
        <item name="android:button">@null</item>
    </style>

    <style name="genderMale" parent="gender">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:background">@drawable/radiobutton_left</item>
    </style>

    <style name="genderFemale" parent="gender">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@drawable/radiobutton_right</item>
    </style>

    <style name="consultationRadioButton">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="consultationCheckBox">
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textColor">@color/caption_text</item>
    </style>

    <style name="ics_spinner" parent="@android:style/Widget.Spinner">
        <item name="android:background">@drawable/bg_ics_spinner</item>
    </style>

    <style name="Animation" parent="android:Animation"/>
    <style name="Animation.Activity" parent="android:Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/activity_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_close_exit</item>
    </style>
</resources>
